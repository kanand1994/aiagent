# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://127.0.0.1:3000

# Database Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/it-automation
REDIS_URL=redis://127.0.0.1:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# AI Services Configuration
AI_SERVICE_URL=http://127.0.0.1:8000
AI_SERVICE_API_KEY=your-ai-service-api-key

# External Integrations
VCENTER_HOST=vcenter.company.com
VCENTER_USER=automation@vsphere.local
VCENTER_PASS=your-vcenter-password

# Active Directory Configuration
AD_URL=ldap://dc.company.com
AD_BASE_DN=DC=company,DC=com
AD_USER=automation@company.com
AD_PASS=your-ad-password

# ServiceNow Integration
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USER=automation.user
SERVICENOW_PASS=your-servicenow-password

# Email Configuration
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=automation@company.com
SMTP_PASS=your-smtp-password
SMTP_FROM=IT Automation <automation@company.com>

# Monitoring Configuration
PROMETHEUS_URL=http://127.0.0.1:9090
GRAFANA_URL=http://127.0.0.1:3000
ELK_URL=http://127.0.0.1:9200

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key
API_RATE_LIMIT=100
CORS_ORIGIN=http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your/webhook/url